<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/#", class: "navbar-brand" do %>
    <%= image_tag "https://dewey.tailorbrands.com/production/brand_version_mockup_image/90/6396077090_772395e5-9df8-49bf-b77d-82ab62bcf351.png?cb=1637431978" %>
  <% end %>

  <nav class="navbar navbar-light-color">
    <div class="container-fluid">
      <form class="d-flex">
        <%= form_tag trips_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find your next adventure"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </form>
    </div>
  </nav>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://i.pravatar.cc/300", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
