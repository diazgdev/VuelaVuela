<div class="hero">
  <h1>Sobrevuela <%= @trip.destination %></h1>
</div>

<div class="container trip-container">
  <div class="row gx-5 info">
    <div class="left col-sm-8">
      <h2 class=" "><%= @trip.destination %></h2>
      <hr>
      Rating: <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i> |
      Duración: <%=@trip.duration %>
      <hr>
      <h3>Sobre este viaje: </h3>
      <%= @trip.description %>
      <h3 class="my-3">Galería de fotos: </h3>
      <img src="https://gaz.mx/projects/vuelavuela/assets/helicopter-trip-1.jpg" alt="..." width="230px" height="150px" class="p-gallery">
      <img src="https://gaz.mx/projects/vuelavuela/assets/helicopter-trip-2.jpg" alt="..." width="230px" height="150px" class="p-gallery">
      <img src="https://gaz.mx/projects/vuelavuela/assets/helicopter-trip-3.jpg" alt="..." width="230px" height="150px" class="p-gallery">
    </div>
    <div class="info-reserva pl-5">
      <p>Partida: <%= @trip.departure%></p>
      <p>Fecha: <%= @trip.date%></p>
      <p>Precio: $<%= @trip.price %></p>
      <hr>
      <div class="reservar">
        <%= link_to "Reservar", trip_reservations_path(@trip.id), method: :post %>
      </div>
    </div>
  </div>
</div>
