<h2 class="my-5 upcoming">Upcoming Trips</h2>
<div class="container my-5">
  <%  if @trips.empty? %>
    <h2 class="my-5" style="text-align: center;">
      We are sorry. We didn't find an adventure for your search.
      <br>
      But do not worry! We may have other options for you
      <br>
      <a href="/trips" class="link-primary">
        Check all our upcoming trips
      </a>
    </h2>
  <% else %>
  <div class="cards">
    <% @trips.each do |trip| %>
    <div class="trip-card">
      <div class="card-destination" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://gaz.mx/projects/vuelavuela/assets/<%= trip.destination %>.jpg'); background-size: cover;">
      <%= link_to "#{trip.destination}", "trips/#{trip.id}"%>
      </div>
      <div class="trip-info">
      Date: <%=trip.date %> <br>
      Departure: <%= trip.departure %> <br>
      Duration: <%=trip.duration %> <br>
      Price: <%= trip.price %> <br>
      <%= link_to 'Learn more', "trips/#{trip.id}"%>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
</div>
